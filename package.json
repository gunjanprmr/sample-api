{
  "name": "sample-api",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/app.ts",
    "compile": "tsc -p .",
    "test": "npm run compile && jest --coverage --color",
    "start": "npm run compile && npm run dev",
    "apiTest": "npm run compile && jest './src/apiTests'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "inversify": "^6.0.1",
    "mssql": "^7.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/traverse": "^7.16.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/mssql": "^7.1.4",
    "@types/node": "^16.11.13",
    "jest": "^26.6.3",
    "supertest": "^6.1.6",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "testPathIgnorePatterns": [
      "/lib/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*container.(t|j)s",
      "!**/*app.(t|j)s",
      "!**/*mockData.(t|j)s"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
